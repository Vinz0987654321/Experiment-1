using namespace std;

int main ()
{
	int ticket250, ticket100, ticket50, ticket25;
	float ticketssold, totalsaleamount;
	char first;

	ticket250 = 5750;
	ticket100 = 28000;
	ticket50 =  35750;
	ticket25 = 18750;
	cout<< "TicketType        AmountofTickets" << endl;
	cout<< "box               " << ticket250 << endl;
	cout<< "sideline          " << ticket100 << endl;
	cout<< "premium           " << ticket50 << endl;
